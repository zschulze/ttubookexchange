<!doctype html>
<html lang="en">
<head>
 <% include ../views/head %>
	
</head>
<body>
<div class="container">

	<header>
        <% include ../views/header %>
    </header>
	
	<h1><%= title %></h1>

	<form action="/accountUpdate" method="post">

		<div class="row">
			<div class="col-md-3">
			 
				<div class="input-group forms">
					<span class="input-group-addon" id="basic-addon1">First Name:</span>
					<input type="text" name="givenName" class="form-control" value=<%= user.givenName %> aria-describedby="basic-addon1">
				</div>
			</div>
		</div>

		<div class="row">
			<div class="col-md-3">
			 
				<div class="input-group forms">
					<span class="input-group-addon" id="basic-addon1">Last Name:</span>
					<input type="text" name="surname" class="form-control" value=<%= user.surname %> aria-describedby="basic-addon1">
				</div>
			</div>
		</div>

		<div class="row">
			<div class="col-md-6">
			 
				<div class="input-group forms">
					<span class="input-group-addon" id="basic-addon1">Email Address:</span>
					<input type="text" name="email" class="form-control" value="<%= user.email %>" aria-describedby="basic-addon1">
				</div>
			</div>
		</div>
		
		<div class="forms">
			<button type="submit" class="btn btn-default" onClick="myFunction()">Submit</button>
		</div>

		<a href="/account" class="btn btn-default" role="button">Return to Account Info</a>
		
	</form>

	 <footer>
        <% include ../views/footer %>
    </footer>

    <script>
		function myFunction() {
    		alert("Account information updated");
		}
	</script>
</div>
	
</body>
</html>